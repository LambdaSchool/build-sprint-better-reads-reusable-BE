{
    "swagger": "2.0",
    "info": 
    {
        "version": "0.1.0",
        "title": "Better-Reads-BW-9-20-NodeJS-REST-API",
        "description": "The backend for the LS Better Reads app started on 9-20"
    },
    "host": "https://better-reads-bw.herokuapp.com/",
    "definitions":
    {
        "id": 
        {
            "properties":
            {
                "increasing integer":
                {
                    "type": "integer"
                }
            }
        },
        "jwt": 
        {
            "properties":
            {
                "token":
                {
                    "type": "string"
                }
            }
        },
        "user":
        {
            "type": "object",
            "properties":
            {
                "username":
                {
                    "type": "string"
                },
                "password":
                {
                    "type": "string"
                }

            }
        },
        "returned-user":
        {
            "type": "object",
            "properties":
            {
                "username":
                {
                    "type": "string"
                },
                "id":
                {
                    "type": "integer"
                }

            }
        }
    },
    "paths":
    {
        "/api/auth/register":
        {
            "post":
            {
                "tags":
                [
                    "Register"
                ],
                "summary": "Register a user for the app",
                "parameters":
                [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "username and password for new user",
                        "schema": {
                            "$ref": "#/definitions/user"
                        },
                        "required": "true"
                    }
                ],
                "produces":
                [
                    "application/json"
                ],
                "responses":
                {
                    "201":
                    {
                        "description": "Created",
                        "schema": 
                        {
                            "$ref": "#/definitions/returned-user"
                        }
                    },
                    "500":
                    {
                        "description": "Internal Error",
                        "schema": 
                        {
                            "type": "object",
                            "properties":
                            {
                                "errorMessage":
                                {
                                    "type": "string",
                                    "value": "Internal Error: Could not register user"
                                }
                            }
                        }
                    },
                    "400":
                    {
                        "description": "User Error",
                        "schema": 
                        {
                            "type": "object",
                            "properties":
                            {
                                "errorMessage":
                                {
                                    "type": "string",
                                    "value": "Missing username or password"
                                }
                            }
                        }
                    }
                }
                
            }
        },
        "/api/auth/login":
        {
            "post":
            {
                "tags":
                [
                    "Login"
                ],
                "parameters":
                [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "username and password for registered user",
                        "schema": {
                            "$ref": "#/definitions/user"
                        },
                        "required": "true"
                    }
                ],
                "produces":
                [
                    "application/json"
                ],
                "summary": "Log a user into the app",
                "responses":
                {
                    "200":
                    {
                        "description": "OK",
                        "schema": 
                        {
                            "$ref": "#/definitions/jwt"
                        }
                    },
                    "500":
                    {
                        "description": "Internal Error",
                        "schema": 
                        {
                            "type": "object",
                            "properties":
                            {
                                "errorMessage":
                                {
                                    "type": "string",
                                    "value": "Internal Error: Could not login"
                                }
                            }
                        }
                    },
                    "400":
                    {
                        "description": "User Error",
                        "schema": 
                        {
                            "type": "object",
                            "properties":
                            {
                                "errorMessage":
                                {
                                    "type": "string",
                                    "value": "Missing username or password"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
